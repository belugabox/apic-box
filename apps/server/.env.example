# ============================================================================
# LOG CONFIGURATION
# ============================================================================
# Log level for the application
# Possible values: debug, info, warn, error
LOG_LEVEL=info

# ============================================================================
# DATA STORAGE CONFIGURATION
# ============================================================================
# Path to data files directory (optional, defaults to ./data)
DATA_FILE_PATH=./data

# ============================================================================
# AUTHENTICATION - JWT CONFIGURATION (REQUIRED)
# ============================================================================
# Secret key for JWT token signing
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-here

# Secret key for JWT refresh token signing
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_REFRESH_SECRET=your-refresh-secret-key-here

# ============================================================================
# ADMIN CONFIGURATION
# ============================================================================
# Default admin password (optional, defaults to 'admin')
ADMIN_PASSWORD=admin

# ============================================================================
# GALLERY CONFIGURATION (REQUIRED)
# ============================================================================
# Secret key for Gallery JWT token signing
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
GALLERY_JWT_SECRET=your-gallery-secret-key-here
